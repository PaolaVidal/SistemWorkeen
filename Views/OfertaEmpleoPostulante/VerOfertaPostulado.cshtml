@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        body {
            background-color: #F4F6F9;
            margin: 0;
            font-family: 'Segoe UI', Arial, sans-serif;
            color: #333;
        }

        .jobs-section {
            padding: 5rem 2rem;
            background-color: #FFFFFF;
            min-height: 100vh;
        }

            .jobs-section h2 {
                color: #1E3A8A;
                font-weight: 700;
                margin-bottom: 3rem;
                text-align: center;
                font-size: 2.5rem;
                text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
            }

        .job-card {
            background-color: #FFFFFF;
            border-radius: 15px;
            box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
            padding: 1.8rem;
            margin-bottom: 2rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .job-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 10px 28px rgba(0, 0, 0, 0.12);
            }

            .job-card h4 {
                color: #1E3A8A;
                font-size: 1.4rem;
                font-weight: 600;
                margin-bottom: 0.75rem;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }

                .job-card h4 a {
                    color: #1E3A8A;
                    text-decoration: none;
                    transition: color 0.3s ease;
                }

                    .job-card h4 a:hover {
                        color: #F97316;
                        text-decoration: underline;
                    }

            .job-card .company {
                color: #374151;
                font-size: 1.15rem;
                font-weight: 500;
                margin-bottom: 0.5rem;
            }

            .job-card .details {
                color: #6B7280;
                font-size: 1rem;
                margin-top: 0.75rem;
            }

                .job-card .details span {
                    margin-right: 1.2rem;
                }

        .btn-details {
            background-color: #F97316;
            border: none;
            color: #FFFFFF;
            padding: 0.6rem 1.8rem;
            font-weight: 600;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-details:hover {
                background-color: #E86100;
                transform: translateY(-2px);
            }

        .container {
            max-width: 1200px;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        .no-offers {
            text-align: center;
            color: #6B7280;
            font-size: 1.2rem;
            margin-top: 2rem;
        }
    </style>
}

<!-- Jobs Section -->
<section class="jobs-section">
    <h2>Ofertas de Empleo</h2>
    <div class="container">
        <ul>
            @foreach (var oferta in (IEnumerable<dynamic>)ViewBag.ofertas)
            {
                <li>
                    <div class="job-card">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h4>
                                    <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id = oferta.Id })">
                                        @oferta.Titulo
                                    </a>
                                </h4>
                                <div class="company">@oferta.Nombre_Empresa</div>
                            </div>
                            <a href="@Url.Action("VerOferta", "OfertaEmpleoPostulante", new { id= oferta.Id })" class="btn btn-details">Ver Detalles</a>
                        </div>
                        <div class="details">
                            <span><strong>Salario:</strong> S/ @oferta.Salario</span>
                            <span><strong>Vacantes:</strong> @oferta.Vacantes</span>
                            <span><strong>Duración:</strong> @oferta.Duracion_Contrato</span>
                            <span><strong>Publicado:</strong> @oferta.Fecha_Publicacion</span>
                        </div>
                    </div>
                </li>
            }
        </ul>
        @if (!((IEnumerable<dynamic>)ViewBag.ofertas).Any())
        {
            <p class="no-offers">No se encontraron ofertas.</p>
        }
    </div>
</section>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            VerNoti();
        });

        setInterval(function () {
            VerNoti();
        }, 300000);

        function VerNoti() {
            $.ajax({
                url: '/Home/CantNotificaciones',
                type: 'POST',
                success: function (data) {
                    $('#Notificaciones').text(data.cantidad);
                },
                error: function () {
                    console.error("Error al obtener las notificaciones");
                    $('#Notificaciones').text('0');
                }
            });
        }
    </script>
}