@model IEnumerable<dynamic>
@{
    Layout = null;
    string Titulo = ViewBag.TituloReporte;
    string Fecha = ViewBag.FechaGeneracion;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title>@Titulo</title>
    <style>
        /* Asegúrate de incluir Font Awesome si no lo has hecho */
        @@import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');

        /* Estilos modernos para el reporte */
        :root {
            --color-primario: #3498db;
            --color-secundario: #2c3e50;
            --color-exito: #2ecc71;
            --color-advertencia: #f39c12;
            --color-peligro: #e74c3c;
            --color-texto: #333;
            --color-fondo: #f9f9f9;
            --color-borde: #e0e0e0;
        }
        
        body {
            font-family: 'Segoe UI', system-ui, sans-serif;
            color: var(--color-texto);
            line-height: 1.6;
            margin: 0;
            padding: 20px;
            background-color: var(--color-fondo);
        }
        
        .reporte {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }
        
        .reporte-header {
            background: linear-gradient(135deg, var(--color-secundario), var(--color-primario));
            color: white;
            padding: 25px 30px;
            text-align: center;
        }
        
        .reporte-title {
            margin: 0;
            font-size: 1.8rem;
            font-weight: 500;
        }
        
        .reporte-subtitle {
            margin: 5px 0 0;
            font-weight: 300;
            opacity: 0.9;
        }
        
        .reporte-body {
            padding: 30px;
        }
        
        .tabla-reporte {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 0.9rem;
        }
        
        .tabla-reporte th {
            background-color: var(--color-primario);
            color: white;
            padding: 12px 15px;
            text-align: left;
            font-weight: 500;
        }
        
        .tabla-reporte td {
            padding: 12px 15px;
            border-bottom: 1px solid var(--color-borde);
        }
        
        .tabla-reporte tr:nth-child(even) {
            background-color: rgba(0,0,0,0.02);
        }
        
        .tabla-reporte tr:hover {
            background-color: rgba(0,0,0,0.05);
        }
        
        .text-right {
            text-align: right;
        }
        
        .text-center {
            text-align: center;
        }
        
        .badge {
            display: inline-block;
            padding: 3px 8px;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 600;
            background-color: var(--color-primario);
            color: white;
        }
        
        .badge-success {
            background-color: var(--color-exito);
        }
        
        .badge-warning {
            background-color: var(--color-advertencia);
        }
        
        .badge-danger {
            background-color: var(--color-peligro);
        }
        
        .progress {
            height: 20px;
            background-color: #f1f1f1;
            border-radius: 4px;
            overflow: hidden;
        }
        
        .progress-bar {
            height: 100%;
            background-color: var(--color-primario);
            text-align: center;
            line-height: 20px;
            color: white;
            font-size: 12px;
        }
        
        /* Controles de impresión */
        .print-controls {
            position: fixed;
            bottom: 20px;
            right: 20px;
            z-index: 100;
        }
        
        .print-btn {
            background: var(--color-secundario);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: 500;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .print-btn:hover {
            background: var(--color-primario);
            transform: translateY(-2px);
        }
        
        .print-btn svg {
            width: 16px;
            height: 16px;
            fill: currentColor;
        }
        
        /* Estilos para impresión */
        @@media print {
            body {
                padding: 0;
                background: white;
            }
            
            .print-controls {
                display: none;
            }
            
            .reporte {
                box-shadow: none;
                border-radius: 0;
            }
            
            .tabla-reporte tr {
                page-break-inside: avoid;
            }
        }

        /* Botón Atrás */
        .back-button {
            position: fixed;
            bottom: 20px;
            left: 20px;
            background: var(--color-secundario);
            color: white;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
            z-index: 100;
        }

            .back-button:hover {
                background: var(--color-primario);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            }
    </style>
</head>
<body>
    <div class="reporte">
        <div class="reporte-header">
            <h1 class="reporte-title">@Titulo</h1>
            <p class="reporte-subtitle">Generado el: @Fecha</p>
        </div>

        <div class="reporte-body">
            <table class="tabla-reporte">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Título Oferta</th>
                        <th>Empresa</th>
                        <th>Fecha Publicación</th>
                        <th class="text-center">Vacantes</th>
                        <th class="text-center">Candidatos</th>
                        <th>Ocupación</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int contador = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@contador</td>
                                <td>@(item.TituloOferta ?? "Sin título")</td>
                                <td>@(item.Empresa ?? "Desconocida")</td>
                                <td>@(item.FechaPublicacion != null ? ((DateTime)item.FechaPublicacion).ToString("dd/MM/yyyy") : "N/A")</td>
                                <td class="text-center">@item.Vacantes</td>
                                <td class="text-center">
                                    <span class="badge @((int)item.CandidatosInscritos > 0 ? "badge-success" : "")">
                                        @item.CandidatosInscritos
                                    </span>
                                </td>
                                <td>
                                    @{
                                        decimal porcentaje = item.PorcentajeOcupacion;
                                        string claseBarra = "";
                                        if (porcentaje > 100) claseBarra = "bg-danger";
                                        else if (porcentaje > 80) claseBarra = "bg-warning";
                                        else claseBarra = "bg-success";
                                    }
                                    <div class="progress">
                                        <div class="progress-bar @claseBarra" style="width: @(porcentaje > 100 ? 100 : porcentaje)%">
                                            @Math.Round(porcentaje, 1)%
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            contador++;
                        }
                    }
                </tbody>
            </table>

            <div class="resumen">
                <h3>Resumen Estadístico</h3>
                <p>Total de ofertas: @Model.Count()</p>
                <p>Total de candidatos inscritos: @Model.Sum(x => (int)x.CandidatosInscritos)</p>
                @if (Model.Any())
                {
                    <p>Oferta con más candidatos: @(Model.OrderByDescending(x => x.CandidatosInscritos).FirstOrDefault()?.TituloOferta ?? "N/A") (@Model.Max(x => x.CandidatosInscritos) candidatos)</p>
                }
            </div>
        </div>
    </div>

    <div class="print-controls">
        <button class="print-btn" onclick="window.print()">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M5 1a2 2 0 0 0-2 2v1h10V3a2 2 0 0 0-2-2H5zm6 8H5a1 1 0 0 0-1 1v3a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1v-3a1 1 0 0 0-1-1z" />
                <path d="M0 7a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2h-1v-2a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2H2a2 2 0 0 1-2-2V7zm2.5 1a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
            </svg>
            Imprimir Reporte
        </button>
    </div>

    <div class="back-button" onclick="window.history.back()">
        <i class="fas fa-arrow-left fa-lg"></i>
    </div>
</body>
</html>