@{
    ViewData["Title"] = "Sistema de Reportes";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <h2><i class="fas fa-chart-line"></i> Panel de Reportes</h2>
        <p>Genera reportes detallados del proceso de reclutamiento</p>
    </div>

    <div class="graph-selection-container">
        <!-- Reporte 1 -->
        <div class="graph-card" onclick="navigateToReport('ReporteCandidatosPorOferta')">
            <div class="graph-icon">
                <i class="fas fa-users"></i>
            </div>
            <h3>Candidatos por Oferta</h3>
            <p>Reporte de inscripciones por cada oferta de empleo</p>
        </div>

        <!-- Reporte 2 -->
        <div class="graph-card" onclick="navigateToReport('ReporteOfertasPorCategoria')">
            <div class="graph-icon">
                <i class="fas fa-briefcase"></i>
            </div>
            <h3>Ofertas por Categoría</h3>
            <p>Distribución de ofertas por categoría profesional</p>
        </div>

        <!-- Reporte 3 -->
        <div class="graph-card" onclick="navigateToReport('ReporteEmpresasTopOfertas')">
            <div class="graph-icon">
                <i class="fas fa-building"></i>
            </div>
            <h3>Empresas Top</h3>
            <p>Empresas con mayor cantidad de ofertas publicadas</p>
        </div>

        <!-- Reporte 4 -->
        <div class="graph-card" onclick="navigateToReport('ReporteRequisitosFrecuentes')">
            <div class="graph-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <h3>Requisitos Frecuentes</h3>
            <p>Habilidades más demandadas en las ofertas</p>
        </div>

        <!-- Reporte 5 -->
        <div class="graph-card" onclick="navigateToReport('ReporteSuscripcionesCategorias')">
            <div class="graph-icon">
                <i class="fas fa-star"></i>
            </div>
            <h3>Suscripciones</h3>
            <p>Preferencias de categorías por los candidatos</p>
        </div>

        <!-- Reporte 6 -->
        <div class="graph-card" onclick="navigateToReport('ReporteEmpresasRegistradas')">
            <div class="graph-icon">
                <i class="fas fa-address-book"></i>
            </div>
            <h3>Empresas Registradas</h3>
            <p>Directorio completo de empresas registradas</p>
        </div>

        <!-- Reporte 7 -->
        <div class="graph-card" onclick="navigateToReport('ReporteCandidatosPorFormacion')">
            <div class="graph-icon">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <h3>Candidatos por Formación</h3>
            <p>Distribución académica de los candidatos</p>
        </div>

        <!-- Reporte 8 -->
        <div class="graph-card" onclick="navigateToReport('ReportePostulantesPorFormacion')">
            <div class="graph-icon">
                <i class="fas fa-user-graduate"></i>
            </div>
            <h3>Postulantes Detallados</h3>
            <p>Formación académica detallada de postulantes</p>
        </div>
    </div>
</div>

<!-- Overlay de carga -->
<div id="loadingOverlay" class="loading-overlay">
    <div class="loading-content">
        <div class="loading-spinner"></div>
        <p>Generando reporte...</p>
    </div>
</div>

@section Styles {
    <style>
        .dashboard-container {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f5f7fa;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .dashboard-header {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
        }

            .dashboard-header h2 {
                margin: 0;
                font-size: 28px;
            }

            .dashboard-header p {
                margin: 5px 0 0;
                color: #7f8c8d;
            }

        .graph-selection-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .graph-card {
            background: white;
            border-radius: 8px;
            padding: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            border-left: 4px solid #3498db;
        }

            .graph-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .graph-icon {
            font-size: 24px;
            color: #3498db;
            margin-bottom: 10px;
        }

        .graph-card h3 {
            margin: 0 0 10px;
            color: #2c3e50;
            font-size: 18px;
        }

        .graph-card p {
            margin: 0;
            color: #7f8c8d;
            font-size: 14px;
        }

        /* Estilos para el overlay de carga */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
            display: none;
        }

        .loading-content {
            text-align: center;
        }

        .loading-spinner {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
            margin: 0 auto 15px;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
}

@section Scripts {
    <script>
        function navigateToReport(actionName) {
            // Mostrar el overlay de carga
            document.getElementById('loadingOverlay').style.display = 'flex';

            // Redirigir después de un pequeño retraso para que se vea la animación
            setTimeout(function () {
                window.location.href = '@Url.Action("Action", "Reportes")'.replace('Action', actionName);
            }, 200);
        }
    </script>
}